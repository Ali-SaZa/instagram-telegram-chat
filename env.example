# =============================================================================
# Instagram-Telegram Chat Application - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control!

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# INSTAGRAM CONFIGURATION
# =============================================================================
# Your Instagram page credentials
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Instagram session and sync settings
INSTAGRAM_SESSION_FILE=instagram_session.json
INSTAGRAM_SYNC_INTERVAL=300
INSTAGRAM_MAX_RETRIES=3
INSTAGRAM_RETRY_DELAY=60
INSTAGRAM_BATCH_SIZE=50
INSTAGRAM_ENABLE_REALTIME=true

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook configuration (optional - for production)
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook
TELEGRAM_WEBHOOK_PORT=8443
TELEGRAM_WEBHOOK_CERT=/path/to/cert.pem
TELEGRAM_WEBHOOK_KEY=/path/to/private.key

# Telegram connection settings
TELEGRAM_POLLING_TIMEOUT=30
TELEGRAM_MAX_CONNECTIONS=100

# =============================================================================
# DATABASE CONFIGURATION (MongoDB)
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=instagram_telegram_chat

# Connection pool settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure random key for encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENABLE_ENCRYPTION=true

# API rate limiting
API_RATE_LIMIT=100
SESSION_TIMEOUT=3600

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_WEBHOOKS=true
ENABLE_SYNC_SERVICE=true
ENABLE_TELEGRAM_BOT=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Set to true for development, false for production
DEBUG=true

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================
# If you're using external monitoring or analytics services
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here
# NEW_RELIC_LICENSE_KEY=your_new_relic_key_here

# =============================================================================
# NOTES:
# =============================================================================
# 1. Replace all "your_*" values with your actual credentials
# 2. Never commit this file to version control
# 3. Keep your .env file secure and restrict access
# 4. Use strong, unique passwords and tokens
# 5. Consider using a secrets manager for production environments
# 6. Regularly rotate your credentials and tokens 